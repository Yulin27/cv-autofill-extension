# ============================================
# CV Auto-Fill Backend Configuration
# No Authentication - Personal Use Mode
# ============================================

# Redis (for CV data storage and caching)
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=86400

# API Keys (optional - users provide via extension)
# Leave empty if users will provide keys through the extension
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=

# CORS (allow Chrome extension access)
ALLOWED_ORIGINS=*

# Environment
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=CV Auto-Fill API (No-Auth)
VERSION=1.0.0

# File Upload
MAX_UPLOAD_SIZE_MB=10
